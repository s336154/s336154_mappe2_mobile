<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditContactActivity"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="38dp"
        android:text="Rediger Kontakt"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#A9A9A9"
        />


    <EditText
        android:id="@+id/editContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Navn" />


    <EditText
        android:id="@+id/editContactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon nummer"
        />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        >



        <Button
            android:id="@+id/saveContactButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lagre"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />


        <Button
            android:id="@+id/contactToMeetingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ny avtale"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/deletecontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slett"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />


    </GridLayout>

</LinearLayout>