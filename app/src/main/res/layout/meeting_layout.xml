
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MeetingActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:textSize="38dp"
                    android:text="Legge til AVTALER"
                    android:textFontWeight="@integer/material_motion_duration_long_2"/>
                <!--
                    <EditText
                        android:id="@+id/editMeetingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tid" />

                    <EditText
                        android:id="@+id/editMeetingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dato" />

                    <EditText
                        android:id="@+id/editMeetingPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sted" />


                    <EditText
                        android:id="@+id/editMeetingComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kommenter" />
                    -->


                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:columnCount="1"
                    android:rowCount="6"
                    android:id="@+id/gridMeeting">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="Tid" />

                        <TimePicker
                            android:id="@+id/timePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_gravity="center"
                            android:timePickerMode="spinner"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:text="Dato"
                            android:padding="16dp"/>


                        <DatePicker
                            android:id="@+id/datePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_gravity="center" />



                        <EditText
                            android:id="@+id/editMeetingPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:hint="Sted"/>

                        <EditText
                            android:id="@+id/editMeetingComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kommenter"
                            android:layout_row="5"
                            android:layout_column="0"/>

                </GridLayout>



                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:rowCount="1">


                        <Button
                            android:id="@+id/meetingToContacts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tilbake"
                            android:layout_column="0"
                            android:layout_row="0" />



                        <Button
                            android:id="@+id/saveMeetingButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lagre"
                            android:layout_column="1"
                            android:layout_row="0" />


                </GridLayout>


        </LinearLayout>

</ScrollView>
